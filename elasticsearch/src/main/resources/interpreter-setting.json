[
  {
    "group": "elasticsearch",
    "name": "elasticsearch",
    "className": "org.apache.zeppelin.elasticsearch.ElasticsearchInterpreter",
    "properties": {
      "elasticsearch.host": {
        "envName": "ELASTICSEARCH_HOST",
        "propertyName": "elasticsearch.host",
        "defaultValue": "localhost",
        "description": "Elasticsearch server host (e.g., localhost, 127.0.0.1, or your cluster DNS)",
        "type": "string"
      },
      "elasticsearch.port": {
        "envName": "ELASTICSEARCH_PORT",
        "propertyName": "elasticsearch.port",
        "defaultValue": "9200",
        "description": "Port for connecting to Elasticsearch. Use 9200 for HTTP/REST, 9300 for Transport (legacy).",
        "type": "number"
      },
      "elasticsearch.client.type": {
        "envName": "ELASTICSEARCH_CLIENT_TYPE",
        "propertyName": "elasticsearch.client.type",
